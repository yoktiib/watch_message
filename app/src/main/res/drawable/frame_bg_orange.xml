<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/orange" />

            <stroke android:width="1dp" android:color="@color/orange" />

            <corners android:radius="10dp" />

            <!--<padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />-->
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/orange" android:startColor="@color/orange" />

            <stroke android:width="1dp" android:color="@color/orange" />

            <corners android:radius="10dp" />

            <!--<padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />-->
        </shape>
    </item>

</selector>