<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_light"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_sticker_preview"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:padding="16dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/close_blue_btn" />

    <RelativeLayout
        android:id="@+id/layout_sticker_preview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_orange_white">

        <ImageView
            android:id="@+id/iv_sticker_preview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/msg_st01" />
    </RelativeLayout>

</RelativeLayout>